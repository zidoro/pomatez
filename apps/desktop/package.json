{
  "name": "@pomatez/desktop",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./build/main/index.js",
  "author": {
    "name": "Roldan Montilla Jr",
    "email": "roldanjr.dev+pomatez@gmail.com",
    "url": "https://github.com/roldanjr"
  },
  "description": "Elegant Multi-platform Desktop App for Pomodoro Lovers.",
  "homepage": "https://www.electronjs.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "ts:check:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "ts:check:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "ts:check": "npm run ts:check:node && npm run ts:check:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run ts:check && electron-vite build",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "electron-vite build && electron-builder --mac --config",
    "build:linux": "electron-vite build && electron-builder --linux --config",
    "postinstall": "electron-builder install-app-deps && xstate typegen \"src/**/*.ts?(x)\""
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^1.0.2",
    "electron-updater": "^6.1.1"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.4",
    "@pomatez/eslint-config": "*",
    "@pomatez/ui": "*",
    "@types/node": "20.3.1",
    "@types/react": "18.2.13",
    "@types/react-dom": "18.2.6",
    "@vitejs/plugin-react": "^4.0.1",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "@xstate/cli": "^0.5.2",
    "@xstate/react": "^3.2.2",
    "electron": "25.1.1",
    "electron-builder": "^24.4.0",
    "electron-vite": "^1.0.23",
    "eslint-plugin-react-refresh": "^0.4.1",
    "is-electron": "^2.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.13.0",
    "vite": "^4.3.9",
    "vite-plugin-svgr": "^3.2.0",
    "xstate": "^4.37.2"
  }
}
