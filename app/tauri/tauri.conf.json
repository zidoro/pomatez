{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pomatez",
  "version": "1.10.0",
  "identifier": "com.roldanjr.pomatez",
  "build": {
    "beforeBuildCommand": "yarn run tauri:updateversion && yarn build",
    "beforeDevCommand": "yarn dev:tauri",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../renderer/build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "height": 502,
        "resizable": true,
        "title": "pomatez",
        "width": 340
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "main"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "appimage",
      "msi",
      "nsis",
      "dmg"
    ],
    "category": "Productivity",
    "copyright": "Copyright Â© 2024 Roldan Montilla Jr",
    "publisher": "Roldan Montilla Jr",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/icon.png"
    ],
    "externalBin": [],
    "longDescription": "",
    "shortDescription": "",
    "licenseFile": "../../LICENSE",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "bannerPath": "./installer/wix/banner.bmp",
        "dialogImagePath": "./installer/wix/dialog.bmp"
      },
      "nsis": {
        "headerImage": "./installer/nsis/header.bmp",
        "sidebarImage": "./installer/nsis/sidebar.bmp",
        "installerIcon": "./icons/icon.ico",
        "installMode": "both"
      }
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  }
}
