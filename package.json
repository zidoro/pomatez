{
  "name": "timeframe-app",
  "version": "1.0.0",
  "private": true,
  "main": "public/electron.js",
  "description": "Time Management Application for Productivity inspired by Pomodoro Technique",
  "keywords": [
    "Time Management Application",
    "Pomodoro Timer Application",
    "Productivity Application"
  ],
  "author": {
    "name": "Roldan Montilla Jr",
    "email": "roldanjrmontilla@gmail.com",
    "url": "https://github.com/roldanjrCodeArts9711"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "postinstall": "electron-builder install-app-deps",
    "electron-build": "electron-builder --windows",
    "electron-release": "electron-builder --windows --publish always",
    "clean-build": "rm -rf build/ dist/",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron . \"",
    "build": "yarn clean-build && yarn react-build && yarn electron-build",
    "release": "yarn clean-build && yarn react-build && yarn electron-release"
  },
  "homepage": "./",
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "electron-updater": "^4.1.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-scripts": "^3.2.0",
    "react-spring": "^8.0.27",
    "say": "^0.16.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "electron": "^6.0.12",
    "electron-builder": "^21.2.0",
    "node-sass": "^4.12.0",
    "react-ripples": "^2.2.1",
    "wait-on": "^3.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
